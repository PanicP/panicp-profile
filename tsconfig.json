{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./public",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "Components/*": [
        "src/components/*"
      ],
      "Static/*": [
        "src/static/*"
      ],
      "History": [
        "src/history.tsx"
      ]
    },
    /* Default flags */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}